<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ETago" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/light_blue</item>-->

     </style>

     <style name="Theme.ETago" parent="Base.Theme.ETago" />

    <!--MENU ITEM TEXT STYLE-->
    <style name="menuText">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="color">@color/alt_black</item>
        <item name="iconTint">@color/alt_black</item>
    </style>

    <!--TEXT CURSOR-->
    <style name="textInput">
        <item name="android:textCursorDrawable">@color/alt_black</item>
    </style>

    <!--Rounded Image View-->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- You can adjust this value to control the roundness -->
        <item name="strokeColor">@color/alt_black</item> <!-- Use your desired stroke color here -->
        <item name="strokeWidth">5dp</item>
    </style>

    <!--CUSTOM MENU ITEM-->
    <style name="AppDrawerMenuItemStyle">
        <item name="android:textAppearance">@style/MenuItemTextAppearance</item>
        <item name="android:divider">@drawable/divider_line</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/alt_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--BOTTOM SHEET THEME-->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>