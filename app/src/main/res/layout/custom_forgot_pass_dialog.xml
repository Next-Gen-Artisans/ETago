<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:background="@drawable/forgot_pass_round_bg"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/forgot_pass_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_pass_dialog_title"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/forgot_pass_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_pass_dialog_text"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/forgot_pass_dialog_title"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/pass_reset_dialog_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/return_login_dialog_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Return to Login"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/forgot_pass_dialog_text"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/return_btn_bg"
            /> <!-- Define this drawable with rounded corners and color -->

    </LinearLayout>





</LinearLayout>