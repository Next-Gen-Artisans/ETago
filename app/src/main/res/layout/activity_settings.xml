<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity"
    android:background="@color/white"
    android:id="@+id/drawer_layout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_container_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/custom_toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/light_blue"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/settings_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:layout_gravity="center"
                    />

            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:id="@+id/settings_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="-20dp"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/settings_info_containers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                app:layout_constraintTop_toBottomOf="@+id/settings_header"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp"
                    android:gravity="center_vertical"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/help_support_whtbg"
                        />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/terms_of_service_btn"
                        android:layout_width="300dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:text="Terms of Service"
                        android:background="@drawable/custom_btn_bg"
                        android:fontFamily="@font/montserrat_bold"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/help_support_privacy"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/privacy_policy_btn"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:text="Privacy Policy"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/custom_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/help_support_bg"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/help_support_btn"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:text="Help / Support"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/custom_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/about_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/header"
        app:itemBackground="@drawable/custom_menu_selector"
        app:itemIconTint="@drawable/custom_menu_item_icon_selector"
        app:itemTextAppearance="@style/menuText"
        app:itemTextColor="@drawable/custom_menu_item_selector"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>